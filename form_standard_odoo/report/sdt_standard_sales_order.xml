                           <table style="border: 2px solid white">
                               <tr style="border: 2px solid white; padding: 0px;">
                                   <td style="border: 2px solid white; padding: 0px;">Order Date</td>
                                   <td style="border: 2px solid white; padding: 0px;"> : </td>
