                        </div>
                        <div class="col-3">
                           <br/>
                           <br/>
                            <br>Name :__________________</br>
                            <br>Date :</br>
                            <br>Time :</br>
                        </div>
                        <div class="col-3">
                           <br/>
                           <br/>
                            <br>Name :__________________</br>
                            <br>Date :</br>
                            <br>Time :</br>
                        </div>
                    </div>
                 </div>
            </t>
        </template>
    </data>
</odoo>