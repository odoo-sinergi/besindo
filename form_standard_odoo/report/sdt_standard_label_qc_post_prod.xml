        <template id="label_qc_post_prod_document_qc">
            <t t-call="form_standard_odoo.sdt_header_internal_layout_polos">
                <div style="font-Size:10px;" class="page">
                    <style type="text/css">
                        tr, td
                        {
                        border-top: 1px solid black;
                        border-right:1px solid black;
                        border-left:1px solid black;
                        border-bottom:1px solid black;
                        padding: 2px;
                        padding-left: 5px;
                        padding-right: 5px;
                        }
                    </style>
                    <style type="text/css">
                        th
                        {
                        border-top: 1px solid black;
                        border-right:1px solid black;
                        border-left:1px solid black;
                        border-bottom:1px solid black;
                        padding: 2px;
                        padding-left: 5px;
                        padding-right: 5px;
                        color: black;
                        }
                    </style>
                    <style type="text/css">
                        table
                        {
                        border-top: 1px solid black;
                        border-right:1px solid black;
                        border-left:1px solid black;
                        border-bottom:1px solid black;
                        font-Size:9px;
                        width: 100%;
                        margin-top: 2px;
                        margin-bottom: 2px;
                        }
                    </style>
                    <t t-set="input" t-value="int(docs.label_qty)"/>
                    <t t-set="rows" t-value="input//2"/>
                    <t t-set="cols" t-value="2"/>
                    <t t-set="lastCol" t-value="input%2"/>
                    <t t-if="lastCol != 0">
                        <t t-set="rows" t-value="rows+1"/>
                    </t>
                    <t t-else="">
                        <t t-set="lastCol" t-value="2"/>
                    </t>
                    <t t-set="no" t-value="1"/>
                    
                    <table>
                    <t t-foreach="rows" t-as="row">
                        <t t-if="row == rows-1">
                            <t t-set="cols" t-value="lastCol"/>
                        </t>
                        <tr>
                            <t t-foreach="cols" t-as="col">
                                <td>
                                    <table width="100%">
                                        <tr>
                                            <td colspan="2" style="border-right:0px;">
                                                <span>
                                                    <strong>
                                                        <span t-field="doc.company_id.name"/>
                                                    </strong>
                                                </span>
                                                <br/>
                                                <span>
                                                    <span t-field="doc.company_id.street2"/>
                                                </span>
                                            </td>
                                            <td style="border-left:0px; text-align:center; vertical-align:middle;">
                                                <img src="/form_standard_odoo/static/img/icon_rohs.png" style="height: 35px; width: 85px;"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <span>Customer</span>
                                            </td>
                                            <td colspan="2">
                                                <span t-field="doc.partner_id.name"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <span>Description</span>
                                            </td>
                                            <td colspan="2">
                                                <t t-set="namaProduct" t-value="doc.product_id.name"/>
                                                <t t-if="doc.product_id.nama_alias"><t t-set="namaProduct" t-value="doc.product_id.nama_alias"/></t>
                                                <span t-esc="namaProduct"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <span>Part Number</span>
                                            </td>
                                            <td colspan="2">
                                                <span t-field="doc.product_id.part_number"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td width="25%">
                                                <span>Qty</span>
                                            </td>
                                            <td width="45%" style="text-align: right;">
                                                <!-- <span t-field="doc.product_uom_qty"/> -->
                                                <span t-field="doc.product_id.uom_id.name"/>
                                            </td>
                                            <td width="30%">
                                                <span t-esc="'Pack No. %s'%no"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <span>Date</span>
                                            </td>
                                            <td>
                                                <span t-field="doc.force_date" t-options='{"format": "dd MMMM yyyy"}'/>
                                                <!-- <span t-field="doc.mrp_id.date_planned_start" t-field-options="{&quot;format&quot;: &quot;dd MM yy&quot;}"/> -->
                                            </td>
                                            <td>
                                                <span>Line </span>
                                                <span t-foreach="doc.mrp_id.workorder_ids" t-as="lines">:                                                            <span t-esc="lines.workcenter_id.code"/>
                                                </span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <span>Operator</span>
                                            </td>
                                            <td>
                                                <span t-field="doc.mrp_id.user_id"/>
                                            </td>
                                            <td>
                                                <span t-esc="'Shift : %s'%doc.mrp_shift.replace('Shift ', '')"/>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                                <t t-set="no" t-value="no+1"/>
                            </t>
                        </tr>
                    </t>
                    </table>
                </div>
            </t>
        </template>
    </data>
